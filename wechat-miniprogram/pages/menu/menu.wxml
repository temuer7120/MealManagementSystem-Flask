<!--menu.wxml-->
<view class="container">
  <view class="card">
    <view class="card-title">菜单管理</view>
    <view class="card-content">
      <view class="mb-3">
        <input type="text" placeholder="搜索菜单" class="input" bindinput="searchMenu" />
      </view>
    </view>
  </view>

  <view wx:if="{{loading}}" class="loading">
    <loading></loading>
    <text>加载中...</text>
  </view>

  <view wx:else>
    <view wx:for="{{menus}}" wx:key="id" class="card">
      <view class="card-title">{{item.name}}</view>
      <view class="card-content">
        <view>{{item.description}}</view>
        <view class="mt-2">
          <button type="primary" size="mini" bindtap="viewMenuDetail" data-id="{{item.id}}">
            查看详情
          </button>
        </view>
      </view>
    </view>

    <view wx:if="{{menus.length === 0}}" class="card">
      <view class="card-content" style="text-align: center;">
        <text>暂无菜单数据</text>
      </view>
    </view>
  </view>
</view>
