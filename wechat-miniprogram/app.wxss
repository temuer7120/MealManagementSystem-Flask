/* app.wxss */
page {
  font-family: 'Microsoft YaHei', Arial, sans-serif;
  background-color: #f8f9fa;
  color: #333333;
}

.container {
  padding: 20rpx;
}

.card {
  background-color: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 16rpx;
}

.card-content {
  font-size: 28rpx;
  line-height: 44rpx;
}

.btn-primary {
  background-color: #4CAF50;
  color: white;
  border-radius: 8rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  text-align: center;
  margin: 16rpx 0;
}

.btn-secondary {
  background-color: #f0f0f0;
  color: #333333;
  border-radius: 8rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  text-align: center;
  margin: 16rpx 0;
}

.input {
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 16rpx;
  font-size: 28rpx;
  margin: 16rpx 0;
  width: 100%;
}

.table {
  width: 100%;
  border-collapse: collapse;
}

.table th,
.table td {
  padding: 16rpx;
  text-align: left;
  border-bottom: 2rpx solid #e0e0e0;
}

.table th {
  background-color: #f5f5f5;
  font-weight: bold;
}

.upload-area {
  border: 2rpx dashed #4CAF50;
  border-radius: 16rpx;
  padding: 48rpx;
  text-align: center;
  margin: 20rpx 0;
}

.upload-area text {
  color: #4CAF50;
  font-size: 28rpx;
}

.alert {
  padding: 16rpx;
  border-radius: 8rpx;
  margin: 16rpx 0;
  font-size: 28rpx;
}

.alert-success {
  background-color: #d4edda;
  color: #155724;
  border: 2rpx solid #c3e6cb;
}

.alert-danger {
  background-color: #f8d7da;
  color: #721c24;
  border: 2rpx solid #f5c6cb;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 48rpx;
}

.loading text {
  margin-left: 16rpx;
  font-size: 28rpx;
  color: #666666;
}
